<section class="hero" style="background: linear-gradient(135deg, {{ settings.primary_color }}, {{ settings.accent_color }});">
  <div class="container">
    <div class="hero-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subtext }}</p>
      <a href="{{ section.settings.cta_link }}" class="cta-button">{{ section.settings.cta_text }}</a>
    </div>
    <div class="hero-image">
      {% if section.settings.image %}
        <img src="{{ section.settings.image | img_url: 'large' }}" alt="{{ section.settings.image.alt }}" class="yarn-illustration">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Cozy Yarn Haven"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover the perfect yarns for your next knitting or crochet project. Soft, vibrant, and full of possibilities."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link",
      "default": "/collections"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ]
}
{% endschema %}
