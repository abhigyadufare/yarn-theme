<section class="our-story">
  <div class="container">
    <div class="story-content">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.content }}</p>
    </div>
    <div class="story-image">
      {% if section.settings.image %}
        <img src="{{ section.settings.image | img_url: 'large' }}" alt="{{ section.settings.image.alt }}">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Our Story",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why Choose Yarn Haven?"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "At Yarn Haven, we believe in the warmth and joy that crafting brings. Our carefully selected yarns are sourced from the finest materials, ensuring quality and comfort in every stitch. Join our community of passionate knitters and crocheters, and let your creativity flourish."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Story Image"
    }
  ]
}
{% endschema %}
