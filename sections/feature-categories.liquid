<section class="feature-categories">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <div class="categories-grid">
      {% for block in section.blocks %}
        <div class="category-card">
          <a href="{{ block.settings.link }}">
            <div class="category-icon">
              {% if block.settings.icon %}
                <img src="{{ block.settings.icon | img_url: 'medium' }}" alt="{{ block.settings.title }}">
              {% endif %}
            </div>
            <h3>{{ block.settings.title }}</h3>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feature Categories",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Explore Our Categories"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Knitting Yarns"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Category Icon"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link",
          "default": "/collections"
        }
      ]
    }
  ],
  "max_blocks": 4
}
{% endschema %}
